root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
max_line_length = 101

[*.yml,*.yaml,*.toml]
indent_size = 2

[*.md]
indent_size = 2

[*.go]
indent_size = 4
indent_style = tab

[Makefile]
indent_size = 4
indent_style = tab

[*.sh]
indent_size = 4
